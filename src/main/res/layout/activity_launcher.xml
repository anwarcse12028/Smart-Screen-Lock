<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:textAlignment="center"
    android:background="@drawable/wallpaper_one"
    tools:context="hussen.anwar.com.screenlock.LauncherActivity"
    android:orientation="vertical">



    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:layout_weight=".9"
        android:layout_width="match_parent"
       android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/tvPatternText"
            android:layout_height="wrap_content"
            android:text="@string/pattern_text"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"/>


        <com.andrognito.patternlockview.PatternLockView
            android:id="@+id/pattern_lock_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_gravity="bottom"
        android:layout_weight=".1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelPattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="@string/btn_reset" />

        <Button
            android:id="@+id/btnSetPattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="@string/btn_contininue" />
    </LinearLayout>


</LinearLayout>
